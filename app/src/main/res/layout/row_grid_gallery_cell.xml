<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:weightSum="4">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/relativeLayout_card0">

                    <android.support.v7.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/cardView0"
                        android:visibility="visible"
                        android:layout_centerHorizontal="true"
                        android:background="@color/transparent"
                        android:foregroundGravity="center">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@mipmap/loading"
                            android:layout_margin="2dp"
                            android:id="@+id/imageView_gallery0"
                            android:scaleType="centerCrop" />

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:text="name"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:id="@+id/textView_name0"
                        android:gravity="center"
                        android:background="@color/transparent"
                        android:textColor="@color/darkgray"
                        android:textSize="11sp"
                        android:layout_below="@+id/cardView0"
                        android:layout_alignRight="@+id/cardView0"
                        android:layout_alignEnd="@+id/cardView0"
                        android:maxLines="1"
                        android:layout_alignLeft="@+id/cardView0"
                        android:layout_alignStart="@+id/cardView0" />

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/relativeLayout_card1">

                    <android.support.v7.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/cardView1"
                        android:visibility="visible"
                        android:layout_centerHorizontal="true"
                        android:background="@color/transparent"
                        android:foregroundGravity="center">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@mipmap/loading"
                            android:layout_margin="2dp"
                            android:id="@+id/imageView_gallery1"
                            android:scaleType="centerCrop" />

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:text="name"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:id="@+id/textView_name1"
                        android:gravity="center"
                        android:background="@color/transparent"
                        android:textColor="@color/darkgray"
                        android:textSize="11sp"
                        android:layout_below="@+id/cardView1"
                        android:layout_alignRight="@+id/cardView1"
                        android:maxLines="1"
                        android:layout_alignEnd="@+id/cardView1"
                        android:layout_alignLeft="@+id/cardView1"
                        android:layout_alignStart="@+id/cardView1" />

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/relativeLayout_card2">

                    <android.support.v7.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/cardView2"
                        android:visibility="visible"
                        android:layout_centerHorizontal="true"
                        android:background="@color/transparent"
                        android:foregroundGravity="center">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@mipmap/loading"
                            android:layout_margin="2dp"
                            android:id="@+id/imageView_gallery2"
                            android:scaleType="centerCrop" />

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:text="name"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:id="@+id/textView_name2"
                        android:gravity="center"
                        android:background="@color/transparent"
                        android:textColor="@color/darkgray"
                        android:textSize="11sp"
                        android:layout_below="@+id/cardView2"
                        android:layout_alignRight="@+id/cardView2"
                        android:maxLines="1"
                        android:layout_alignEnd="@+id/cardView2"
                        android:layout_alignLeft="@+id/cardView2"
                        android:layout_alignStart="@+id/cardView2" />

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/relativeLayout_card3">

                    <android.support.v7.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:id="@+id/cardView3"
                        android:visibility="visible"
                        android:layout_centerHorizontal="true"
                        android:background="@color/transparent"
                        android:foregroundGravity="center">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@mipmap/loading"
                            android:layout_margin="2dp"
                            android:id="@+id/imageView_gallery3"
                            android:scaleType="centerCrop" />

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:text="name"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:id="@+id/textView_name3"
                        android:gravity="center"
                        android:background="@color/transparent"
                        android:textColor="@color/darkgray"
                        android:textSize="11sp"
                        android:layout_below="@+id/cardView3"
                        android:layout_alignRight="@+id/cardView3"
                        android:maxLines="1"
                        android:layout_alignEnd="@+id/cardView3"
                        android:layout_alignLeft="@+id/cardView3"
                        android:layout_alignStart="@+id/cardView3" />

                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>