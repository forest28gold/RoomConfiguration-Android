<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.abvrtridentroom.roomconfiguration">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:configChanges="locale|orientation"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.MainActivity" android:screenOrientation="landscape"/>
        <activity android:name=".ui.GetStartedActivity" android:screenOrientation="landscape"/>
        <activity android:name=".ui.RoomSelectionActivity" android:screenOrientation="landscape"/>
        <activity android:name=".ui.HomeActivity" android:screenOrientation="landscape"/>
        <activity android:name=".ui.GallerySettingsActivity" android:screenOrientation="landscape"/>
        <activity android:name=".ui.SlideShowActivity" android:screenOrientation="landscape"/>
    </application>

</manifest>